function mutation(arr) {
  //ignore upper case and setup the two words to compare
  var word1 = arr[0].toLowerCase();
  var word2 = arr[1].toLowerCase();
  
  for(i=0; i<word2.length; i++){
      if(word1.indexOf(word2[i])<0){ 
        return false;
      }   
    } 
  return true;
}

mutation(["hello", "hey"]);
